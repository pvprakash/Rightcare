<%= form_for @admin_user, url: admin_admin_users_path,class: "registration-form" do |f| %>
  <fieldset>
    <div class="form-bottom">
      <div class="">
        <div class="form-group float-label-control">
        	<%= f.label :email%>
          <%= f.text_field :email, autofocus: true,class: "form-control input-md"%>
        </div>
        <div class="form-group float-label-control">
          <%= f.label :password%>
          <%= f.password_field :password, autofocus: true,class: "form-control input-md"%> 
        </div>
         <div class="form-group float-label-control">
         	<%= f.label :password_confirmation%>
          <%= f.password_field :password_confirmation, autofocus: true,class: "form-control input-md"%> 
        </div>
      </div>
      <div class="form-group" style="margin-bottom:3px;">
        <div class="">
          <div class="form-group float-label-control">
          	<%= f.label :role%>:
          	<%unless params[:action].eql?('edit')%>
		      	<%if current_admin_user.super_user? %>
		        <%= select_tag "admin_user[role]", options_for_select(["hospital","doctor"]),"data-required" => "true"
		        %>
		        <% elsif current_admin_user.hospital? %>
		        <%= select_tag "admin_user[role]", options_for_select(["doctor"]),"data-required" => "true"
		        %>
		        <%end%>
		    <%else%>
		       <%= @admin_user.role %>
		    <%end%>
          </div>
        </div>
      </div>
 
      <div class="clearfix"></div>
      <center>
        <%= f.submit "submit", class: "button btn btn-next"%>
      </center>
    </div>
  </fieldset>
<%end%>