<div class="container mt-20">
  <div class="row">
  <%= form_for @patient, url: user_patients_path(current_user),class: "form-horizontal" do |f| %>
    <fieldset>
    <div class="form-group">
      <%= f.label :first_name,class: "col-md-4 control-label" %>
      <div class="col-md-5 form-group">
        <%= f.text_field :first_name, autofocus: true,class: "form-control input-md"%>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :last_name,class: "col-md-4 control-label" %>
      <div class="col-md-5 form-group">
        <%= f.text_field :last_name, autofocus: true,class: "form-control input-md"%> 
      </div>
    </div>

    <div class="form-group">
      <%= f.label :gender,class: "col-md-4 control-label" %>
      <div class="col-md-5 form-group" >
      	<div style="display:inline-flex">
        <%= radio_button("patient", "gender", "male")%> <label> male </label>
        <%= radio_button("patient", "gender", "female")%><label>female</label>
       </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :dob,class: "col-md-4 control-label" %>
      <div class="col-md-5 form-group">
        <%= f.date_field :dob, autofocus: true,class: "form-control input-md"%> 
      </div>
    </div>

    <div class="form-group">
      <%= f.label :health_conditions,class: "col-md-4 control-label" %>
      <div class="col-md-5 form-group">
      	<%= select_tag "patient[health_conditions]", options_for_select(Patient::HEALTH_CONDITION),:multiple => true,:style => 'width: 100%',"data-required" => "true"
        %>
      </div>
    </div>

     <div class="form-group">
      <%= f.label :speciality_services,class: "col-md-4 control-label" %>
      <div class="col-md-5 form-group">
      	<%= select_tag "patient[speciality_services]", options_for_select(Patient::SERVICE),:multiple => true,:style => 'width: 100%',"data-required" => "true"
        %>
      </div>
    </div>
    
    <div class="form-group">
      <label class="col-md-4 control-label" for="confirmation"></label>
      <div class="col-md-5 form-group">
        <%= f.submit "Register", class: "btn btn-primary"%>
   
      </div>
    </div>
    </fieldset>
	<%end%>
  </div>
</div>
<style>
input[type=radio] {
    margin: 3px 11px 0;
    line-height: normal;
}

</style>
<script>
$(document).ready(function(){
	$("#patient_health_conditions, #patient_speciality_services").select2({
  	// templateResult: formatState;
	});
})
</script>
