<div class="modal-dialog">
  <div class="modal-content">
    <button type="button" class="close" data-dismiss="modal">Ã—</button>
    <div class="modal-body">
      <div class=" login-form ">
        <h5>Login to your account</h5>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name),html: {class: "form-horizontal"}) do |f| %>
						<fieldset>
						<div class="form-group float-label-control">
						    <%= f.email_field :email, autofocus: true,class: "form-control"%> 
						</div>

						<div class="form-group float-label-control">
						    <%= f.password_field :password, autofocus: true,class: "form-control "%> 
						</div>

						<% if devise_mapping.rememberable? -%>

						<div class="col-md-6 col-xs-6 col-sm-6">
		          <div class="squaredTwo">
		          	<%= f.check_box :remember_me ,id: 'squaredTwo'%>
		            <label for="squaredTwo"></label>
		          </div>
		          <span > Remember Me </span> 
		        </div>
		        <%end%>
		        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
		        <div class="col-md-6 col-xs-6 col-sm-6">
  						<%= link_to "Forgot your password?", new_password_path(resource_name),remote: true,class: "btn btn-link pull-right" %>
  					</div>
						<% end -%>
            <div class="clearfix"></div>
						  <div class="form-group float-label-control">
						    <%= f.submit "Sign In", class: "bt1n" %>
						  </div>
						  <p>You don't have an account? <b><%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  								<%= link_to "Sign up", new_registration_path(resource_name) %>
									<% end -%></b></p>
					<% end -%>
      </div>
    </div>
  </div>
  <!-- /.modal-content --> 
</div>