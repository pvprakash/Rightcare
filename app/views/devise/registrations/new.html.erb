
<div class="container mt-20">
  <div class="row">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name),html: {class: "form-horizontal", onsubmit: "return checkForm(this)"}) do |f| %>
    <%= devise_error_messages! %>
    <fieldset>
    <div class="form-group">
      <%= f.label :first_name,class: "col-md-4 control-label" %>
      <div class="col-md-5">
        <%= f.text_field :first_name, autofocus: true,class: "form-control input-md"%> 
      </div>
    </div>

    <div class="form-group">
      <%= f.label :last_name,class: "col-md-4 control-label" %>
      <div class="col-md-5">
        <%= f.text_field :last_name, autofocus: true,class: "form-control input-md"%> 
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email,class: "col-md-4 control-label" %>
      <div class="col-md-5">
        <%= f.email_field :email, autofocus: true,class: "form-control input-md"%> 
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password,class: "col-md-4 control-label" %>
      <% if @minimum_password_length %>
       <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <div class="col-md-5">
        <%= f.password_field :password, autofocus: true,class: "form-control input-md"%> 
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation,class: "col-md-4 control-label" %>
      <div class="col-md-5">
        <%= f.password_field :password_confirmation, autofocus: true,class: "form-control input-md"%> 
      </div>
    </div>

    <div class="form-group">
      <%= f.label :mobile_number,class: "col-md-4 control-label" %>
      <div class="col-md-5">
        <%= f.text_field :mobile_number, autofocus: true,class: "form-control input-md"%> 
      </div>
    </div>

    <div class="form-group">
      <%= label_tag "",nil,class: "col-md-4 control-label" %>
      <div class="col-md-5">
        <%= select_tag :care_for, options_for_select(User::CAREFOR,"patient"),:prompt => "Who is this care for ?",class: "form-control input-md" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-4"></div>
      <div class="col-md-5">
      <div style="display: inline-flex;">
          <%= check_box_tag "agree",nil %> &nbsp; <%= label_tag "I have read and agree to Agreement ",nil %> <%= link_to 'Terms & Conditions',terms_condition_pages_path%>
      </div>
      </div>
    </div>
    
    <div class="form-group">
      <label class="col-md-4 control-label" for="confirmation"></label>
      <div class="col-md-4">
        <%= f.submit "Sign up", class: "btn btn-primary"%>
        <%= render "devise/shared/links" %>
      </div>
    </div>
    </fieldset>
<%end%>

  </div>
</div>

<script>


 function checkForm(form)
  {
    if(!form.agree.checked) {
      alert("Please indicate that you accept the Terms and Conditions");
      form.agree.focus();
      return false;
    }
    return true;
  }

</script>