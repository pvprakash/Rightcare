<section class="">
<div>
  <div class="container">
    <div class="col-xs-12 col-md-12 ">
      <div class="tab-content">
        <div class="tab-pane active" id="tab1" role="tabpanel">
          <div class="profile-caregiver">
        		<h3>Our  Caregivers <span> Available</span>
          <div>
          <center>
            <img src="/assets/seperation.png" height="14" width="85">
          </center>
        </div>
        </h3>
      </div>
      <% @caregivers.each do |cargiver|%>
      	<div class="col-sm-3">
