          <div class="image"> 	<%= image_tag cargiver.avatar.url,width: '242px;'%></div>
          <div class="caption">
            <h3><%=cargiver.first_name%></h3>
            <p><%=cargiver.last_name%></p>
            <div class=" big-box" id="first-child">
            	<%= link_to "Read more", show_caregiver_user_path(cargiver), class: 'btn btn-primary' %>
              
            </div>
          </div>
        </div>
      	</div>
      <%end%>
      <%= will_paginate @caregivers %>
    </div>
  </div>
  </div>

</div>
</div>
</section>
